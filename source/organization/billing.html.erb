---
title: Billing - Muzit
bodyClass: billing
---
<div class="container">
  <h1 class="text-center text-md-left my-4">
    Billing
  </h1>
  <h2 class="text-center text-md-left">
    Medium Plan
  </h2>

  <dl class="definition-list-group">
    <div class="list-item">
      <dt>Current bill total</dt>
      <dd>
        $4,995 / mo
      </dd>
    </div>
    <div class="list-item">
      <dt>Last Payment</dt>
      <dd>
        <sup>$</sup>
        4,995
        <span class="date">9/2/2019</span>
      </dd>
    </div>
    <div class="list-item">
      <dt>Next payment due</dt>
      <dd>
        Nov 1, 2019
      </dd>
    </div>
    <div class="list-item">
      <dt>Promo Code</dt>
      <dd>
        <%= link_to 'Add Promo Code', '#', 'data-toggle' => "modal", 'data-target' => '#add-promo-code' %>
      </dd>
    </div>
  </dl>

  <div class="text-center">
    <%= link_to 'Change Plan', '../pricing/index.html', class: 'btn btn-sm btn-outline-primary' %>
  </div>
  <h2 class="text-center text-md-left">
    Payment Method
  </h2>
  <div class="card payment-method">
    <div class="row">
      <div class="col-4">
        <h4>Visa</h4>
        <div class="text">
          * * * * 1234
        </div>
      </div>
      <div class="col-4">
        <h4>Expires</h4>
        <div class="text">
          12/2020
        </div>
      </div>
      <div class="col-4 text-right">
        <%= link_to 'Update Card', '../organization/credit-card.html', class: 'align-middle' %>
      </div>
    </div>
  </div>
  <div class="text-center">
    <%= link_to 'Payment History', '../organization/payment-history.html', class: 'btn btn-sm btn-outline-primary' %>
  </div>
  <div class="action text-center cancel-subscription">
    <%= link_to 'Cancel Subscription', '../organization/cancel-subscription.html' %>
  </div>
</div>
<!-- // end container-fluid -->
<div class="modal fade" id="add-promo-code" tabindex="-1" role="dialog" aria-labelledby="AddPromoCode" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="AddPromoCode">Add promo code</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="" method="" class="form needs-validation" novalidate>
        <div class="modal-body">
          <fieldset>
            <div class="form-group">
              <label for="coupon">Discount Code</label>
              <input class="form-control" type="text" name="coupon" id="coupon" placeholder="Enter code" required>
              <div class="invalid-feedback">
                Please enter valid promo code.
              </div>
            </div>
          </fieldset>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- // end modal add-promo-code -->
<script>
// Example starter JavaScript for disabling form submissions if there are invalid fields
(function() {
  'use strict';
  window.addEventListener('load', function() {
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.getElementsByClassName('needs-validation');
    // Loop over them and prevent submission
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>